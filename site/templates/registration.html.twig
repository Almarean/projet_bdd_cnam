{% extends 'base.html.twig' %}

{% block body %}
{{ parent() }}
<div class="container">
    <section class="mt-5">
        <h1 class="text-center">Create an account</h1>
        <article class="col-md-6 mx-auto">
            {% if success_message is defined %}
                <div class="alert alert-success text-center">{{ success_message }}</div>
            {% endif %}
            {{ form_start(form) }}
                {% if errors is defined %}
                    {% for error in errors %}
                        {% if error.label == 'not_confirmed' %}
                            <p class="text-danger"><i class="fas fa-exclamation-triangle"></i> {{ error.message }}</p>
                        {% endif %}
                    {% endfor %}
                {% endif %}
                <div class="form-group">
                    <div class="form-group">
                        {{ form_label(form.name, 'Name') }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.firstname, 'Firstname') }}
                        {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {% if errors is defined %}
                            {% for error in errors %}
                                {% if error.label == 'email_existence' %}
                                    <p class="text-danger"><i class="fas fa-exclamation-triangle"></i> {{ error.message }}</p>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                        {{ form_label(form.email, 'Email') }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.phone, 'Phone') }}
                        {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.password, 'Password') }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
                    </div>
                </div>
            {{ form_end(form) }}
            <div class="mt-3 text-center">
                <p class="lead">Or <a href="{{ path('app_login') }}"> login</a></p>
            </div>
        </article>
    </section>
</div>
{% endblock %}