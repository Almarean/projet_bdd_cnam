                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>

                                <!-- Modal body -->
                                <div class="modal-body">
                                    {% if project.image != null %}
                                        <img class="img-fluid" src="{{ asset('images/publications/' ~ project.image) }}"
                                             alt="Image non chargée.">
                                    {% endif %}
                                    <p>
                                        {{ project.description }}
                                    </p>
                                </div>

                                <!-- Modal footer -->
                                <div class="modal-footer">
                                    <small class="text-muted">{{ project.datePublication|date('d/m/Y') }}</small>
                                    <div class="btn-group">
                                        <button type="button submit" class="btn btn-success" data-dismiss="modal">I
                                            participate
                                        </button>
                                        <button type="button submit" class="btn btn-danger">I don't participate</button>
                                        <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}